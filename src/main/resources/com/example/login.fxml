<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.controller.LoginController"
          alignment="CENTER"
          hgap="15"
          vgap="15"
          style="-fx-padding: 40; -fx-background-color: #F9F9F9; -fx-border-color: #D6D6D6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
    <Label text="Please Sign In" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"
           GridPane.halignment="CENTER"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
               promptText="Enter your username"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #CCC; -fx-padding: 5;"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Enter your password"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #CCC; -fx-padding: 5;"/>

    <Button text="Login" fx:id="loginButton" GridPane.columnIndex="1" GridPane.rowIndex="3"
            onAction="#handleLogin"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"
            GridPane.halignment="RIGHT"/>
</GridPane>
