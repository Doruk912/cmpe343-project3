<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.controller.AdminMenuController">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cinema Admin Menu" />
        </HBox>
    </top>
    <left>
        <VBox style="-fx-padding: 10 0 10 10;">
        </VBox>
    </left>

    <center>
        <TableView fx:id="movieTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="150" text="Title" />
                <TableColumn fx:id="posterColumn" prefWidth="100" text="Poster" />
                <TableColumn fx:id="genreColumn" prefWidth="100" text="Genre" />
                <TableColumn fx:id="summaryColumn" prefWidth="250" text="Summary" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="addMovieButton" onAction="#onAddMovie" text="Add New Movie" />
            <Button fx:id="updateMovieButton" onAction="#onUpdateMovie" text="Update Selected Movie" />
        </HBox>
    </bottom>

    <right>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-weight: bold;" text="Selected Movie Details" />
            <Label text="Title:" />
            <TextField fx:id="titleField" promptText="Movie Title" />
            <Label text="Poster URL:" />
            <TextField fx:id="posterField" promptText="Poster URL" />
            <Label text="Genre:" />
            <TextField fx:id="genreField" promptText="Genre" />
            <Label text="Summary:" />
            <TextArea fx:id="summaryArea" prefHeight="100" promptText="Summary" style="-fx-pref-width: 300;" wrapText="true" />

            <Button fx:id="saveChangesButton" onAction="#onSaveChanges" text="Save Changes" />
        </VBox>
    </right>
</BorderPane>
