<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.AdminMenuController" style="-fx-background-color: #f0f0f0;" prefWidth="900" prefHeight="600">
    <top>
        <StackPane style="-fx-padding: 20; -fx-background-color: #2c3e50;">
            <Label text="Cinema Center Admin Menu" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" StackPane.alignment="CENTER" />
            <HBox alignment="CENTER_RIGHT" spacing="10" StackPane.alignment="TOP_RIGHT">
                <Label fx:id="usernameLabel" text="Username: admin" style="-fx-text-fill: white;" />
                <Button text="Logout" onAction="#onLogout" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </StackPane>
    </top>

    <left>
        <VBox style="-fx-padding: 10 0 10 10;">
        </VBox>
    </left>

    <center>
        <HBox spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="movieTable" prefWidth="600">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
                    <TableColumn fx:id="genreColumn" text="Genre" prefWidth="100" />
                    <TableColumn fx:id="summaryColumn" text="Summary" prefWidth="345" />
                </columns>
            </TableView>

            <VBox spacing="10" prefWidth="300" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1;">
                <Label text="Selected Movie Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <VBox spacing="5">
                    <Label fx:id="selectedTitle" text="Title: " />
                    <Label fx:id="selectedGenre" text="Genre: " />
                    <BorderPane>
                        <center>
                            <ImageView fx:id="selectedPoster" fitHeight="200" fitWidth="150" preserveRatio="true" />
                        </center>
                    </BorderPane>
                    <Label fx:id="selectedSummary" text="Summary: " wrapText="true" style="-fx-max-width: 280;" />
                </VBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #2c3e50;">
            <Button fx:id="addMovieButton" text="Add New Movie" onAction="#onAddMovie" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button fx:id="updateMovieButton" text="Update Selected Movie" onAction="#onUpdateMovie" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </bottom>

</BorderPane>