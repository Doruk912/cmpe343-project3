<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.AdminMenuController">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Cinema Admin Menu" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <left>
        <VBox style="-fx-padding: 10 0 10 10;">
        </VBox>
    </left>

    <center>
        <TableView fx:id="movieTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
                <TableColumn fx:id="posterColumn" text="Poster" prefWidth="100"/>
                <TableColumn fx:id="genreColumn" text="Genre" prefWidth="100" />
                <TableColumn fx:id="summaryColumn" text="Summary" prefWidth="250" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="addMovieButton" text="Add New Movie" onAction="#onAddMovie" />
            <Button fx:id="updateMovieButton" text="Update Selected Movie" onAction="#onUpdateMovie" />
        </HBox>
    </bottom>

    <right>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Selected Movie Details" style="-fx-font-weight: bold;" />
            <Label text="Title:" />
            <TextField fx:id="titleField" promptText="Movie Title" />
            <Label text="Poster URL:" />
            <TextField fx:id="posterField" promptText="Poster URL" />
            <Label text="Genre:" />
            <TextField fx:id="genreField" promptText="Genre" />
            <Label text="Summary:" />
            <TextArea fx:id="summaryArea" promptText="Summary" prefHeight="100" wrapText="true" style="-fx-pref-width: 300;" />

            <Button fx:id="saveChangesButton" text="Save Changes" onAction="#onSaveChanges" />
        </VBox>
    </right>
</BorderPane>